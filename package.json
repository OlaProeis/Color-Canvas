{
  "name": "color-canvas",
  "version": "0.1.0-beta",
  "description": "A kid-friendly drawing and coloring web app with shape tools, templates, and flood fill",
  "author": "",
  "license": "MIT",
  "keywords": [
    "drawing",
    "coloring",
    "kids",
    "canvas",
    "vue",
    "typescript",
    "pwa",
    "educational"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-pattern dist --ignore-pattern dev-dist --ignore-pattern node_modules",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-pattern dist --ignore-pattern dev-dist --ignore-pattern node_modules",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\""
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "typescript": "^5.4.0",
    "vite": "^5.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^2.0.0",
    "vue-tsc": "^2.0.0"
  }
}
